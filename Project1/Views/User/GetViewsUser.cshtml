@model List<ProductModel>
@{
    ViewData["Title"] = "GetViews";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.4.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
<section class="mb-lg-10 mt-lg-14 my-8">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="header-container p-0 mb-3" style="background-color:lightskyblue;">
                    <div class="p-3 mb-3" style="background-color: steelblue;">
                        <div class="container d-flex justify-content-between align-items-center">
                            <h2>Мої перегляди</h2>
                        </div>
                    </div>
                    <div class="row justify-content mx-3">
                        @if (Model != null)
                        {
                            @if (Model.Count() != 0)
                            {
                                @foreach (ProductModel product in Model)
                                {
                                    <div class="col-md-3 mb-3">
                                        <a href="/AllProduct/DetailsProduct?id=@product.id" class="text-decoration-none text-inherit">
                                            <div class="card" style="@(product.available ? "" : "opacity: 0.7; background-color: #f2f2f2;")">
                                                <img src="@Url.Content(product.img)" class="card-img-top" style="object-fit: contain; width: 100%; height: 200px;">
                                                <div class="card-body">
                                                    <h5 class="card-title">@product.name</h5>
                                                    <p class="card-text">@product.short_description</p>
                                                    <p class="card-text">Ціна: @product.price грн</p>
                                                    @if (!product.available)
                                                    {
                                                        <p class="card-text text-center" style="font-weight: bold; font-size: 18px; color: black;">немає в наявності</p>
                                                    }
                                                </div>
                                            </div>
                                        </a>
                                    </div>
                                }
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
