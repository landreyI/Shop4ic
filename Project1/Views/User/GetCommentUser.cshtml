@model List<Comments>
@{
    ViewData["Title"] = "AllUser";
}
<section class="mb-lg-10 mt-lg-14 my-8">
    <div class="container">
        <div class="row">
            @if (Model != null && Model.Count() != 0)
            {
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="header-container p-0 mb-3" style="background-color: lightskyblue;">
                                <div class="p-3 mb-3" style="background-color:steelblue;">
                                    <div class="container">
                                        <h2>Коментарі</h2>
                                    </div>
                                </div>
                                <div class="header-container p-3 mb-3">

                                    @foreach (Comments comment in Model)
                                    {
                                        <div class="col-md-12 mb-3">
                                            <div class="mt-3">
                                                <div class="col-lg-12">
                                                    <div class="card">
                                                        <div class="card-body d-flex justify-content-between align-items-center">
                                                            <div>
                                                                <h2>@comment.Product.name</h2>
                                                                <p>@comment.Text</p>
                                                            </div>
                                                            <a href="/AllProduct/DetailsProduct?id=@comment.IdProduct" class="btn btn-dark" style="width: 40px; height: 40px; z-index: 1;">
                                                                <i class="fas fa-arrow-right"></i>
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />