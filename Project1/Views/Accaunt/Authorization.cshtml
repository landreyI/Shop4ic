@model Project1.Models.ViewsModel.AuthorizationViewModel
@{
    ViewData["Title"] = "Authorization";
}
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

@using (Html.BeginForm("Authorization", "Accaunt", FormMethod.Post))
{


    <div class="form-group">
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

    </div>
    <div class="col-12 col-md-6 offset-lg-1 col-lg-4 order-lg-2 order-1">
        <div class="mb-lg-9 mb-5">
            <p>Введіть свої дані. (адмінка Default@gmail.com - 123456)</p>
        </div>
        <form class="needs-validation" asp-action="Authorization" method="post" novalidate>
            <div class="row g-3">
                <div class="col-12">
                    <label for="formSignupEmail" class="form-label visually-hidden">Електронна пошта</label>
                    <input type="email" class="form-control" id="formSignupEmail" placeholder="Електронна пошта" required asp-for="Email">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="col-12">
                    <div class="password-field position-relative">
                        <label for="formSignupPassword" class="form-label visually-hidden">Пароль</label>
                        <div class="input-group">
                            <input type="password" class="form-control" id="formSignupPassword" placeholder="*****" required asp-for="Password">
                            <button class="btn btn-outline-secondary" type="button" onclick="togglePasswordVisibility()"><i class="bi bi-eye"></i></button>
                        </div>
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                </div>
                <div class="d-flex justify-content-between">
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Вхід</button>
                    </div>
                    <div>
                        <a class="btn btn-primary" href="/Accaunt/Registration" role="button">Зареєструватися</a>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <script>
        function togglePasswordVisibility() {
            var passwordInput = document.getElementById("formSignupPassword");
            var passwordConfirmInput = document.getElementById("formSignupPasswordConfirm");
            var toggleButton = document.getElementById("togglePasswordBtn");

            if (passwordInput.type === "password") {
                passwordInput.type = "text";
                passwordConfirmInput.type = "text";
                toggleButton.innerHTML = "<i class='bi bi-eye-slash'></i>";
            } else {
                passwordInput.type = "password";
                passwordConfirmInput.type = "password";
                toggleButton.innerHTML = "<i class='bi bi-eye'></i>";
            }
        }
    </script>
}

