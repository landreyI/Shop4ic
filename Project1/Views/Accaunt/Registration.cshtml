@model RegisterViewModel
@{
    ViewData["Title"] = "Registration";
}
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

@using (Html.BeginForm("Registration", "Accaunt", FormMethod.Post))
{


    <div class="form-group">
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

    </div>
    <div class="col-12 col-md-6 offset-lg-1 col-lg-4 order-lg-2 order-1">
        <div class="mb-lg-9 mb-5">
            <h1 class="mb-1 h2 fw-bold">Почніть покупки</h1>
            <p>Ласкаво просимо! Введіть свої дані, щоб почати.</p>
        </div>
        <!-- form -->
        <form class="needs-validation" asp-action="Registration" method="post" novalidate>
            <div class="row g-3">
                <!-- col -->
                <div class="col">
                    <!-- input -->
                    <label for="formSignupfname" class="form-label visually-hidden">Ім'я</label>
                    <input type="text" class="form-control" id="formSignupfname" placeholder="Ім'я" required asp-for="Name">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="col-12">
                    <!-- input -->
                    <label for="formSignupEmail" class="form-label visually-hidden">Електронна пошта</label>
                    <input type="email" class="form-control" id="formSignupEmail" placeholder="Електронна пошта" required asp-for="Email">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="col-12">
                    <div class="password-field position-relative">
                        <label for="formSignupPassword" class="form-label visually-hidden">Пароль</label>
                        <div class="input-group">
                            <input type="password" class="form-control" id="formSignupPassword" placeholder="*****" required asp-for="Password">
                            <button class="btn btn-outline-secondary" type="button" onclick="togglePasswordVisibility()"><i class="bi bi-eye"></i></button>
                        </div>
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                </div>
                <div class="col-12">
                    <div class="password-field position-relative">
                        <label for="formSignupPasswordConfirm" class="form-label visually-hidden">Повторіть пароль</label>
                        <div class="input-group">
                            <input type="password" class="form-control" id="formSignupPasswordConfirm" placeholder="Повторіть пароль" required asp-for="PasswordConfirm">
                            <button class="btn btn-outline-secondary" type="button" onclick="togglePasswordVisibility()"><i class="bi bi-eye"></i></button>
                        </div>
                        <span class="text-danger" asp-validation-for="PasswordConfirm"></span>
                    </div>
                </div>
                <!-- btn -->
                <div class="col-12 d-grid"><button type="submit" class="btn btn-primary">Зареєструватися</button></div>

                <!-- text -->
                <p>
                    <small>
                        Продовжуючи, ви погоджуєтеся з нашими
                        <a href="#!">Умовами обслуговування</a>
                        та
                        <a href="#!">Політикою конфіденційності</a>
                    </small>
                </p>
            </div>
        </form>
    </div>

    <script>
        function togglePasswordVisibility() {
            var passwordInput = document.getElementById("formSignupPassword");
            var passwordConfirmInput = document.getElementById("formSignupPasswordConfirm");
            var toggleButton = document.getElementById("togglePasswordBtn");

            if (passwordInput.type === "password") {
                passwordInput.type = "text";
                passwordConfirmInput.type = "text";
                toggleButton.innerHTML = "<i class='bi bi-eye-slash'></i>";
            } else {
                passwordInput.type = "password";
                passwordConfirmInput.type = "password";
                toggleButton.innerHTML = "<i class='bi bi-eye'></i>";
            }
        }
    </script>
}

